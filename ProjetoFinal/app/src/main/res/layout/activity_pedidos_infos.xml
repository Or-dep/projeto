<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PedidosInfos">

    <TextView
        android:id="@+id/TextoDadosdopedido"
        android:layout_width="253dp"
        android:layout_height="33dp"
        android:text="Dados do pedido"
        android:textAlignment="center"
        android:textColor="@color/cor_texto"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/InputItem1"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_marginTop="100dp"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.113"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/item1"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/custom_text"
            android:hint="1-Item"
            android:outlineAmbientShadowColor="#FFFFFF"
            android:outlineSpotShadowColor="#FFFFFF"
            android:shadowColor="#FFFFFF"
            android:textColor="@color/white"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="12dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/InputItem2"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_marginTop="200dp"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.113"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/item2"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/custom_text"
            android:hint="2-Item"
            android:textColor="@color/white"
            android:textSize="12dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/InputItem3"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_marginTop="300dp"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.113"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/item3"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/custom_text"
            android:hint="3-Item"
            android:textColor="@color/white"
            android:textSize="12dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/InputItem4"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_marginTop="400dp"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.113"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/item4"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/custom_text"
            android:hint="4-Item"
            android:textColor="@color/white"
            android:textSize="12dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/qt1"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginTop="100dp"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toEndOf="@+id/InputItem1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/total1"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@drawable/custom_text"
            android:hint="Quantidade"
            android:textColor="@color/white"
            android:textSize="12dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/qt2"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginTop="200dp"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toEndOf="@+id/InputItem2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/total2"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@drawable/custom_text"
            android:hint="Quantidade"
            android:textColor="@color/white"
            android:textSize="12dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/qt3"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginTop="300dp"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toEndOf="@+id/InputItem3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/total3"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@drawable/custom_text"
            android:hint="Quantidade"
            android:textColor="@color/white"
            android:textSize="12dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/qt4"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginTop="400dp"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toEndOf="@+id/InputItem4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/total4"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@drawable/custom_text"
            android:hint="Quantidade"
            android:textColor="@color/white"
            android:textSize="12dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/SalvarPedido"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/botao"
        android:text="Salvar"
        android:textColor="@color/cor_texto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>